
<div class="productCard card m-2">
    <img src="@Product.ImageURL" class="card-img-top p-1">
    <div class="card-body">
        <h5 class="card-title">@Product.Name</h5>
        <a href="/products/@Product.Id" class="btn btn-primary">Check Me Out!</a>
    </div>
</div>


@code {
    [Parameter] public Product Product { get; set; }
}
