<Application x:Class="WpfApp2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfApp2"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourceDictionaries/Colors.xaml"></ResourceDictionary>  
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="AcceptSolidBrush" Color="{StaticResource AcceptColor}"></SolidColorBrush>
            <SolidColorBrush x:Key="CancelSolidBrush" Color="{StaticResource CancelColor}"></SolidColorBrush>
        </ResourceDictionary>
    </Application.Resources>
</Application>
